@model OrphanageMVC.Models.LoginModel

@{
    ViewBag.Title = "Index";
}

<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <div>
                <div class="card bg-dark" style="padding:10px;color:white; margin:10px;">
                    <h3 class="text-center"> LOGIN</h3>
                    <hr />
                    <div >
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group " align="center">
                                @Html.LabelFor(m => m.oRegistrationNum, htmlAttributes: new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.oRegistrationNum, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.oRegistrationNum, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group" align="center">
                                @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.Password, htmlAttributes: new { @class = "form-control", @type = "password" })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Login" class="btn btn-success" />
                            </div>
                        }
                    </div>
                </div>
                <div class="card bg-light" style="padding:10px;color:white">
                    @Html.ActionLink("Register Here", "Create")
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            
            
        </div>
    </div>


</div>


