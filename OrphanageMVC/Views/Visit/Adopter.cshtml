@model OrphanageMVC.Models.OrphanageVisit
@{
    ViewBag.Title = "Adopter";
}


<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <div>
                <div class="crd">
                    <h3 class="title">SCHEDULE</h3>
                    <hr />
                    <div>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group " align="center">
                                @Html.LabelFor(m => m.aName, htmlAttributes: new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.aName, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.aName, "", new { @class = "text-danger small" })
                            </div>
                            <div class="form-group" align="center">
                                @Html.LabelFor(m => m.aAddress, htmlAttributes: new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.aAddress, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.aAddress, "", new { @class = "text-danger small" })
                            </div>
                            <div class="form-group" align="center">
                                @Html.LabelFor(m => m.aContactNumber, htmlAttributes: new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.aContactNumber, htmlAttributes: new { @class = "form-control", @type = "number" })
                                @Html.ValidationMessageFor(model => model.aContactNumber, "", new { @class = "text-danger small" })
                            </div>
                            <div class="form-group" align="center">
                                @Html.LabelFor(m => m.aScheduleDate, htmlAttributes: new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.aScheduleDate, htmlAttributes: new { @class = "form-control", @type = "date" })
                                @Html.ValidationMessageFor(model => model.aScheduleDate, "", new { @class = "text-danger small" })
                            </div>

                            <div class="form-group" align="center">
                                @Html.LabelFor(m => m.aScheduleTime, htmlAttributes: new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.aScheduleTime, htmlAttributes: new { @class = "form-control", @type = "time" })
                                @Html.ValidationMessageFor(model => model.aScheduleTime, "", new { @class = "text-danger small" })
                            </div>
                            <div class="form-group">
                                <div class="button text-center">
                                    <input type="submit" value="Submit" class="btn" />
                                </div>

                            </div>
                        }
                    </div>
                </div>
                
            </div>
        </div>
    </div>


</div>
