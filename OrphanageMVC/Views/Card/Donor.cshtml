@model IEnumerable<OrphanageMVC.Models.reqTable>
@{
    ViewBag.Title = "Donor";
}

@{ if (Model.Count() > 0)
    {
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    @*<div class="col-sm-4 py-3 py-sm-3">*@
                   <div class="col-lg-6">
                       <div class="crd">
                           <h1>Amount : @item.amount</h1>
                           <hr />
                           <p>Description : @item.description</p>
                           <small>Date: @item.date.Date</small>
                           <hr />
                           <div class="row">
                               <div class="col-lg-2">
                                   <a href="@Url.Action("Dummy", "Card", new {oid =item.oId, id = @item.Id })" class="btn btn-green">Pay</a>
                               </div>
                               <div class="col">
                                   <div class="progress">
                                       <div class="progress-bar" style="width:10%"></div>
                                   </div>
                               </div>
                           </div>
                       </div>
                   </div>
                }






            </div>
        </div>


    }
    else
    {
        <div class="container">
            <div class="crd text-center">
                <h1>NO REQUIREMENTS PRESENT</h1>
            </div>
        </div>
    }

}
