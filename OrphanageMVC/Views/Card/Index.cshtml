@model IEnumerable<OrphanageMVC.Models.OrphanageRegistrationView>

@{
    ViewBag.Title = "Index";


}

@if (!User.Identity.IsAuthenticated)
{


    <h1> EXPLORE ORPHANAGES </h1>
    <hr />

    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                @*<div class="col-sm-4 py-3 py-sm-3">*@
                <div class="col-lg-6">
                    <div class="crd" style="min-height:200px; padding:20px" onclick="location.href='@Url.Action("Dashboard","OrphanageM",new { id = item.oId })'">
                        <div class="row">
                            <div class="col">
                                <div>
                                    <h2>@item.oName</h2>
                                    <hr />
                                    <p>@item.addressLine1 @item.addressLine2 @item.city @item.state @item.pincode @item.country</p>
                                    <h4>Contact Number: @item.phoneNum</h4>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            @{
                                if (!User.Identity.IsAuthenticated)
                                {
                                    <div class="col">
                                        <a href="@Url.Action("Donor", "Card", new { id = @item.oId })" class="btng btn-red">Donate</a>
                                    </div>
                                    <div class="col">
                                        <a href="@Url.Action("Adopter", "Visit", new { id = @item.oId })" class="btng btn-blue">Schedule A Visit</a>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            }



        </div>
    </div>


}
else {
   
    <div class="crd">
        <h1>Page Not Found</h1>
    </div>
    }
